{
  "name": "lerna-ci",
  "version": "1.0.4",
  "description": "The essential toolkit for monorepo managed by lerna",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": "./dist/bin/index.js",
  "repository": "https://github.com/oe/lerna-ci.git",
  "author": "Saiya",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node test/index.ts",
    "clean": "rimraf ./dist",
    "prebuild": "yarn run lint && yarn run clean",
    "build": "tsc && chmod +x dist/bin/index.js",
    "lint-message": "echo 'lint code before commit'",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "release": "yarn build && yarn publish"
  },
  "keywords": [
    "monorepo",
    "lerna",
    "lerna-ci",
    "toolkit",
    "ci/cd"
  ],
  "dependencies": {
    "@types/semver": "^7.3.9",
    "cosmiconfig": "^7.0.1",
    "deploy-toolkit": "^0.1.1",
    "fixpack": "^4.0.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "rimraf": "^2.6.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=8"
  }
}
