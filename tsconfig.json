{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "allowJs": false,
    "baseUrl": "./",
    "lib": [
      "dom",
      "es7"
    ],
    "paths": {
      "src/*": [
        "src/"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}